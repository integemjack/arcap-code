<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1, maximum-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <title>ARCap</title>
    <link type="text/css" rel="stylesheet" href="/css/font.css" />
    <link type="text/css" rel="stylesheet" href="/css/desktopstyle.css" />
    <!-- designer css should be the last loaded css file -->
    <link type="text/css" rel="stylesheet" href="/css/designer-default.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="/thirdparty/js/jquery.js"></script>
    <script type="text/javascript">
        config = <%- JSON.stringify(config) %>;
        debug = <%= config.debug %>;
    </script>
    <script type="text/javascript" src="/audio/recorder.js"></script>
    <script src="//sdk.twilio.com/js/video/releases/2.8.0/twilio-video.min.js"></script>
    <script type="text/javascript" src="/js/main.js"></script>
    <script src="/js/tf.js"></script>
    <script src="/js/posenet.js"></script>
</head>

<body>
    <script>
        if (annyang) {
            annyang.setLanguage('zh-CN');

            annyang.debug();

            // Start listening.
            annyang.start();
        } else {
            console.log("no annyang");
        }
    </script>
    <div class="success">
        <div class="vcontainer">
            <div class="vcenter">
                <ul>
                    <li>
                        <div class="content"></div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="error">
        <ul>
            <li>
                <h1>ERROR</h1>
            </li>
            <li>
                <div class="content"></div>
            </li>
        </ul>
    </div>
    <div class="initScreen">
        <ul>
            <li>
                <h1>Initializing...</h1>
            </li>
            <li>
                <div class="content">Getting system ready, thank you for your patience!</div>
            </li>
        </ul>
    </div>
    <div id="headers"></div>
    <div id="showDebug">DEBUG</div>
    <div id="layers"></div>
    <div id="persons"></div>
    <canvas id="ai"></canvas>
    <video id="camera" autoplay muted></video>
    <div class="noShow">
        <canvas id="ai_test"></canvas>
        <canvas id="canvas"></canvas>
    </div>
    <button id="loginBtn"></button>

    <div style="position: fixed; bottom: 0; right: 0;">
        <video id="remote_video" autoplay muted style="width: 1px;"></video>
        <canvas id="remote_canvas" style="display: none;"></canvas>
    </div>

    <div id="remote_users" style="position: fixed; bottom: 0; right: 0;"></div>

    <script src="/js/camera.js"></script>
    <script src="/js/ai.js"></script>
</body>

</html>
